<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.mycompany.mavenproject1.FXMLController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>
    
     <Label fx:id="inflabel" GridPane.columnIndex="0" 
           GridPane.rowIndex="0" GridPane.columnSpan="4" 
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Label>
    
    <Label fx:id="hourslabel" GridPane.columnIndex="0" 
           GridPane.rowIndex="6" GridPane.columnSpan="4" 
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Label>
    
    <ListView fx:id="listView" GridPane.columnIndex="0" GridPane.rowIndex="3" 
              GridPane.columnSpan="4" GridPane.rowSpan="4">
        
    </ListView>
    
    <Button fx:id="backButton" text="back"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            >
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    <Button fx:id="createMeeting" text="Add new meeting"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="2"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            >
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    <Button fx:id="checkMeetingsButton" text="Meetings"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="2" GridPane.rowIndex="2"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            >
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    <Button fx:id="addPersonButton" text="Add Person"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="3" GridPane.rowIndex="2"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            >
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    
</GridPane>